<tr>
    <td data-th="Product">
      <div class="row">
        <div class="col-sm-2 hidden-xs"><img src="http://placehold.it/100x100" alt="..." class="img-responsive"/></div>
        <div class="col-sm-10">
          <h4 class="nomargin"><%= cart_item.product.name %></h4>
          <p>Quis aute iure reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Lorem ipsum dolor sit amet.</p>
        </div>
      </div>
    </td>
    <td data-th="Price"><%= number_to_currency(cart_item.product.price) %></td>
    <td data-th="Quantity">
    <%= form_for :cart do |f| %>
      <%= f.number_field cart_item.quantity, class: "form-control text-center", value: "1" %>
    <% end %>
    </td>
    <td data-th="Subtotal" class="text-center"><%= number_to_currency(cart_item.total_price) %></td>
    <td class="actions" data-th="">
      <button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button>
      <%= link_to cart_item, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" do %>
        <i class="fa fa-trash-o"></i>
      <% end %>
    </td>
  </tr>
  
