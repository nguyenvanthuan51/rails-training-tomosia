<body class="bg-primary">
  <div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
      <main>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-5">
              <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                  <h3 class="text-center font-weight-light my-4">Login</h3>
                </div>
                <div class="card-body">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-group">
                      <%= f.label :email, "Email", class: "small mb -1", for: "inputEmailAddress" %>
                      <%= f.email_field :email, class: "form-control py-4", type: "email", placeholder: "Enter email address" %>
                    </div>
                    <div class="form-group">
                      <%= f.label :password, "Password", class: "small mb -1", for: "inputPassword" %>
                      <%= f.password_field :password, class: "form-control py-4", type: "password", placeholder: "Enter password" %>
                    </div>
                    <div class="form-group">
                      <% if devise_mapping.rememberable? %>
                        <div class="custom-control custom-checkbox">
                          <%= f.label :remember_me, "Remember password", class: "custom-control-label", for: "rememberPasswordCheck" %>
                        </div>
                      <% end %>
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                      <%# <a class="small" href="password.html">Forgot Password?</a> %>
                      <%= f.submit "Login", class: "btn btn-primary" %>
                    </div>
                  <% end %>
                </div>
                <div class="card-footer text-center">
                  <div class="small">
                    <%= link_to  "Need an account? Sign up!", new_user_registration_path %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</body>


<%= render "devise/shared/links" %>
